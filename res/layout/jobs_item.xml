<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="440px"
			  android:layout_height="50px"
              android:id="@+id/RLJobsItemRoot">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50px" android:id="@+id/RLEditBar" android:layout_centerVertical="true"
            android:layout_alignParentTop="true" android:background="@drawable/bg_product_list_bar"
            android:visibility="invisible">
        <EditText android:layout_width="320px" android:layout_height="fill_parent" android:text="Mercy Hospital"
                  android:id="@+id/txtItemJobName" android:gravity="center_vertical" android:layout_marginLeft="20px"
                  android:textColor="#FFFFFF" android:textSize="22px"
                  android:background="@android:color/transparent" android:singleLine="true">
        </EditText>
        <RelativeLayout android:layout_width="45px" android:layout_height="fill_parent" android:id="@+id/RLCancel"
                        android:layout_toRightOf="@+id/RLEditDone" android:layout_marginLeft="5px">
            <Button android:layout_width="30px" android:layout_height="30px" android:id="@+id/btnCancel"
                    android:background="@drawable/bt_cancel" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="45px" android:layout_height="fill_parent" android:id="@+id/RLEditDone"
                        android:layout_toRightOf="@+id/txtItemJobName">
            <Button android:layout_width="30px" android:layout_height="30px" android:id="@+id/btnEditDone"
                    android:background="@drawable/bt_check" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="50px" android:id="@+id/RLShowBar"
                    android:layout_centerVertical="true" android:layout_alignParentTop="true"
                    android:background="@drawable/bg_product_list_bar" android:visibility="visible">
        <TextView
                android:layout_width="320px"
                android:layout_height="fill_parent"
                android:text="Mercy Hospital"
                android:id="@+id/lblJobName" android:gravity="center_vertical" android:layout_marginLeft="20px"
                android:textColor="#FFFFFF" android:textSize="22px" android:singleLine="true" android:ellipsize="end"/>
        <RelativeLayout
                android:layout_width="45px"
                android:layout_height="fill_parent" android:id="@+id/RLJobEdit"
                android:layout_toRightOf="@+id/lblJobName" android:layout_alignParentTop="true">
            <Button
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:id="@+id/btnJobEdit"
                    android:background="@drawable/bt_job_edit" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="45px" android:layout_height="fill_parent" android:id="@+id/RLJobArchive"
                        android:layout_toRightOf="@+id/RLJobEdit"
                        android:layout_marginLeft="5px" android:layout_alignParentTop="true">
            <Button android:layout_width="30px" android:layout_height="30px" android:id="@+id/btnJobDelete"
                    android:background="@drawable/archive" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

